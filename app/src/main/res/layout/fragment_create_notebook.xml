<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/create_notebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/main_login_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/AppTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_notebook"
                        android:textAlignment="center" />

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/main_login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/title_input"
                    android:inputType="textShortMessage"
                    style="@style/AccountInputField"
                    android:hint="@string/title_hint"
                    app:backgroundTint="@color/white" />

                <EditText
                    android:id="@+id/color_input"
                    android:inputType="textCapCharacters"
                    style="@style/AccountInputField"
                    android:hint="@string/color_hint"
                    android:autofillHints="#FF0000 for red"
                    app:backgroundTint="@color/white" />

                <Button
                    android:id="@+id/create_notebook_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/white"
                    android:padding="15dp"
                    android:shadowColor="@color/light_blue"
                    android:text="@string/create_notebook" />



            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</layout>