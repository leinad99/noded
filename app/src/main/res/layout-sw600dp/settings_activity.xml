<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            style="@style/TitleSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/the_developers"
            android:textAlignment="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/name_ian"
                style="@style/creator_name"
                android:text="@string/ian_spryn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_light"
                android:maxWidth="260dp"
                android:text="@string/ian_description"
                android:textColor="@color/off_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_ian" />


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="8dp"
                android:src="@drawable/ian"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/name_mitchell"
                style="@style/creator_name"
                android:text="@string/mitchell_smith"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_light"
                android:maxWidth="260dp"
                android:text="@string/mitchell_description"
                android:textColor="@color/off_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_mitchell" />


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="8dp"
                android:src="@drawable/mitch"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/name_daniel"
                style="@style/creator_name"
                android:text="@string/daniel_degraaf"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_light"
                android:maxWidth="260dp"
                android:text="@string/daniel_description"
                android:textColor="@color/off_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_daniel" />


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="8dp"
                android:src="@drawable/daniel"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/TitleSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textAlignment="center" />


        <Button
            android:id="@+id/logout_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_with_ripple"
            android:text="@string/logout"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/delete_account_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_with_ripple"
            android:text="@string/delete_account"
            android:textColor="@color/red_500" />
    </LinearLayout>
</ScrollView>
